<Configuration status="WARN">
    <Properties>
        <Property name="log-path">/home/qolsys/logs</Property>
    </Properties>
    <Appenders>
     
        <Console name="console-log" target="SYSTEM_OUT">
            <PatternLayout pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n"/>
        </Console>
        
        <!--  
        <RollingFile name="trace-log" fileName="${log-path}/mycuteblog-trace.log"
                     filePattern="${log-path}/mycuteblog-trace-%d{yyyy-MM-dd}.log">
            <PatternLayout>
                <pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingFile>
        -->
        <RollingFile name="error-log" fileName="${log-path}/ServerDemo-error.log"
                     filePattern="${log-path}/ServerDemo-error-%d{yyyy-MM-dd}.log">
            <PatternLayout>
                <pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{36} [%M]  - %msg %xThrowable{separator(|)}%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="WARN">
        <!--  
            <appender-ref ref="trace-log" level="debug"/>
            -->
            <appender-ref ref="error-log" level="error"/>
             
            <appender-ref ref="console-log" level="info"/>
            
          </Root>
    </Loggers>
</Configuration>
